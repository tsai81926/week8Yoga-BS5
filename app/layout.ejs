    <script src="https://unpkg.com/swiper@7/swiper-bundle.min.js"></script>
    <script>
       /*課程多元 - Swiper*/
      var courseSwiper = new Swiper(".courseSwiper", {
        autoplay: {
          delay: 5000,
        },
        breakpoints: {
          1: {
            slidesPerView: 2,
            grid: {
              rows: 2,
              fill: 'row'               
            },
            centeredSlides: false,
            spaceBetween: 15,
          },
          992: {
            slidesPerView: 1,
            spaceBetween: 30,
            centeredSlides: false,
          },
        }
      });
    /*聽聽他們怎麼說 - Swiper*/
      var recommendsSwiper = new Swiper (".recommendsSwiper", {
        autoplay: {
          delay: 5000,
        },
        breakpoints: {
          1: {
            slidesPerView: 1,
            grid: {
              rows: 3,
              fill: 'row'               
            },
            navigation: {
              nextEl: ".fa-arrow-left",
              prevEl: ".fa-arrow-right",
            },
            centeredSlides: false,
            spaceBetween: 15,
          },
          768: {
            slidesPerView: 2,
            grid: {
              rows: 2,
              fill: 'row'               
            },
            centeredSlides: false,
            spaceBetween: 30,
          },
          992: {
            slidesPerView: 3,
            grid: {
              rows: 2,
              fill: 'row'               
            },
            spaceBetween: 30,
            centeredSlides: false,
          },
        }
      });
    /*瑜珈空間 - Swiper*/
    var yogaSpaceSwiper = new Swiper(".yogaSpaceSwiper", {
      autoplay: {
        delay: 5000,
      },
      breakpoints: {
        1: {
          slidesPerView: 1.5,
          grid: {
            rows: 1,
            fill: 'row'               
          },
          centeredSlides: false,
          spaceBetween: 15,
        },
        768: {
          slidesPerView: 3,
          grid: {
            rows: 1,
            fill: 'row'               
          },
          centeredSlides: false,
          spaceBetween: 30,
        },
        992: {
          slidesPerView: 4,
          grid: {
            rows: 1,
            fill: 'row'               
          },
          spaceBetween: 30,
          centeredSlides: false,
        },
      }
    });
    </script>
    <script src="./assets/js/vendors.js"></script>
    <script src="./assets/js/all.js"></script>
    
